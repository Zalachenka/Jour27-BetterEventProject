<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Créer un nouvel événement </h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag  'Titre du nouvel événement' %>
        <%= text_field_tag 'title', "", class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= label_tag "Date de l'événement" %>
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
              <input id="start_date" name="start_date" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
              <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
              </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datetimepicker1').datetimepicker(locale: 'fr');
          });
      </script>


      <div class="form-group">
        <%= label_tag  "Durée" %>
        <%= text_field_tag 'duration', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Description" %>
        <%= text_area_tag 'description', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Prix" %>
        <%= text_field_tag 'price', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Lieu" %>
        <%= text_field_tag 'location', "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= submit_tag "Créer l'événement", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>


      <br><br><br><br>
    </div>
  </div>
</div>
