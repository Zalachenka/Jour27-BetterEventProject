<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Créer un nouvel événement </h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag  'Titre du nouvel événement' %>
        <%= text_field_tag 'title', "", class: "form-control"  %>
      </div>


      <div class="form-group">
        <%= label_tag "Date" %>
        <%= text_field_tag "start_date_day", nil, placeholder: "yyyy-mm-dd", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= label_tag "Hour" %>
        <%= text_field_tag "start_date_hour", nil, placeholder: "hh-mm-ss", class: "form-control"%>
      </div>


      <div class="form-group">
        <%= label_tag  "Durée" %>
        <%= text_field_tag 'duration', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Description" %>
        <%= text_area_tag 'description', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Prix" %>
        <%= text_field_tag 'price', "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Lieu" %>
        <%= text_field_tag 'location', "", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= submit_tag "Créer l'événement", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>


      <br><br><br><br>
    </div>
  </div>
</div>
